<h2>予約履歴一覧</h2>

    <table>

      <thead>
          <tr>
          <th>貸出物</th>
          <th>部屋</th>
          <th>貸出日</th>
          <th>返却日</th>
          </tr>
      </thead>
      
       <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
          <td>
              <%= reservation.created_at.strftime('%Y/%m/%d') %>
          </td>

          <td><%= order.delivery_post_code %><%= order.delivery_address %><%= order.delivery_name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.product.name %>
            <% end %>
          </td>
          <td><%= number_to_currency(order.billing_amount, strip_insignificant_zeros: true, :unit => "￥") %></td>

          <td><%= order.status_i18n %></td>
          <td><%= link_to "注文詳細", order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>

    </table>