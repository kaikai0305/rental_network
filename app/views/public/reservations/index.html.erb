<div>
<h2>予約履歴一覧</h2>

    <table>

      <thead>
          <tr>
          <th>部屋</th>
          <th>貸出物</th>
          <th>個数</th>
          <th>貸出日</th>
          <th>返却日</th>
          </tr>
      </thead>

       <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
          <td>
              <%= reservation.room_name %>
          </td>

            <% reservation.reservation_lendings.each do |reservation_lendings| %>
            <td><%= reservation_lendings.lending_id %></td>
            <td><%= reservation_lendings.quantity %></td>
            <td><%= reservation_lendings.memo %></td>
            <% end %>
          <td><%= reservation.start %></td>

          <td><%= reservation.finish %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>