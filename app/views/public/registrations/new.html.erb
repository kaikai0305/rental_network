<div class="container">

  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %>
      （姓）<%= f.text_field :sur_name %>
      （名）<%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :フリガナ %>
      （セイ）<%= f.text_field :sur_name_kana %>
      （メイ）<%= f.text_field :first_name_kana %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :phone_number %>
    </div>


    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワードの再入力 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

</div>