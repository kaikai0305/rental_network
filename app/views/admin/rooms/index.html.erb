<div class="container">
 <div class="row">
  <div class="col-xs-12">

     <h1>部屋一覧</h1>

     <%= link_to new_admin_room_path do %>
      <i class="fas fa-plus-circle"></i>
     <% end %>

     <table class="table">
        <thead class="table-light">
         <tr>
          <th>部屋ID</th>
          <th>部屋名</th>
          <th>説明</th>
         </tr>
       </thead>

       <tbody>
        <% @rooms.each do |room| %>
        <tr>
         <td><%= room.id %></td>

         <td><%= link_to room.name, admin_room_path(room) %></td>

         <td><%= room.caption %></td>
        </tr>
        <% end %>
       </tbody>


  </div>
 </div>
</div>