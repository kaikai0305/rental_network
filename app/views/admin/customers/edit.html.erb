<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h2>会員情報編集</h2>


      <%= form_with model: @customer, url: admin_customer_path do |f| %>

        <div class="field">
          <%= f.label :名前 %>
          （姓）<%= f.text_field :sur_name %>
          （名）<%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %>
          （セイ）<%= f.text_field :sur_name_kana %>
          （メイ）<%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :post_code %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="field">
          <%= f.select :is_removed, [['退会', true], ['有効', false]] %>
        </div>

        <div class="actions">
          <%= f.submit "編集内容を保存", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "顧客詳細に戻る", admin_customer_path(@customer),  class:"btn btn-info"%>
    </div>
  </div>
</div>